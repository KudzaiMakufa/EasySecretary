<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kudzai.EasySec">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.kudzai.EasySec.Main"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.ShowSubscriptions">
            <intent-filter>
                <action android:name=".ShowSubscriptions" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.ShowExpenses">
            <intent-filter>
                <action android:name=".ShowExpenses" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.AdminPortal">
            <intent-filter>
                <action android:name=".AdminPortal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.Manage">
            <intent-filter>
                <action android:name=".Manage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.WelcomeScreen">
            <intent-filter>
                <action android:name=".WelcomeScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.MainActivity">
            <intent-filter>
                <action android:name=".MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kudzai.EasySec.initialSystemView"
            android:label="@string/title_activity_initial_system_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".initialSystemView" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kudzai.EasySec.adminFromSettings">
            <intent-filter>
                <action android:name=".adminFromSettings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>